modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Advising Dashboard"

[[workflows.workflow]]
name = "Next.js Advising Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd advising-dashboard-next && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38585
externalPort = 3000

[[ports]]
localPort = 39861
externalPort = 3001

[[ports]]
localPort = 41405
externalPort = 3003

[[ports]]
localPort = 44143
externalPort = 4200

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port=5000", "--server.address=0.0.0.0"]
